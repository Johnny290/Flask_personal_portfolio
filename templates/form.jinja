
{% block content %}

    <body>
      	<div class="form">
            <form action="{{ url_for('contactForm') }}" method="POST">
                
                <p> {{ form.name(class="form-control", placeholder="Your name ...") }} </p>

                <p> {{ form.email(class="form-control", placeholder="Your email ...") }} </p>
                
                <p> {{form.subject(class="form-control", placeholder="Your subject ...")}} </p>

                <p> {{ form.message(class="form-control-msg", placeholder="Write your request ...")}} </p>

                <p> {{ form.submit(class="btn") }} </p>

            </form>
        </div>
    </body>
{% endblock %}
